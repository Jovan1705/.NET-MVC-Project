<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/fontawesome.css">
    <link rel="stylesheet" href="~/Content/templatemo-space-dynamic.css">
    <link rel="stylesheet" href="~/Content/animated.css">
    <link rel="stylesheet" href="~/Content/owl.css">
</head>
<body>
    <div>
        <header class="header-area header-sticky wow slideInDown" data-wow-duration="0.75s" data-wow-delay="0s">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <nav class="main-nav">
                            <a href="Index" class="logo">
                                <h4>Polovni<span>Automobili</span></h4>
                            </a>
                            <ul class="nav">
                                <li class="scroll-to-section">@Html.ActionLink("Početna","Index","Site")</li>
                                <li class="scroll-to-section">@Html.ActionLink("Unos auta", "UnosAuta", "Site")</li>
                                <li class="scroll-to-section">@Html.ActionLink("Unos motora", "UnosMotora", "Site")</li>
                                <li class="scroll-to-section"><div class="main-red-button">@Html.ActionLink("Kontaktirajte nas", "Kontakt", "Site")</div></li>
                            </ul>
                            <a class='menu-trigger'>
                                <span>Menu</span>
                            </a>
                        </nav>
                    </div>
                </div>
            </div>
        </header>

        @RenderBody()

        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 wow fadeIn" data-wow-duration="1s" data-wow-delay="0.25s">
                        <p>
                            © Copyright 2022 Polovni Automobili. All Rights Reserved.

                            <br>Design: <a rel="nofollow" href="https://www.linkedin.com/in/jovan-grubanov-38002121a/">Jovan Grubanov</a>
                        </p>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/owl-carousel.js"></script>
    <script src="~/Scripts/animation.js"></script>
    <script src="~/Scripts/imagesloaded.js"></script>
    <script src="~/Scripts/templatemo-custom.js"></script>
</body>
</html>
